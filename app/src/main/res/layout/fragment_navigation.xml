<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<data >
    <variable
        name="mainFragmentViewModel"
        type="com.footprint.travel.viewmodel.MainFragmentViewModel">
    </variable>
</data>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="wrap_content">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true"
        android:layout_height="wrap_content">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp">
            <RelativeLayout
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                android:scaleType="centerCrop"
                android:background="@mipmap/bg_navigation"
                android:layout_width="match_parent"
                android:layout_height="260dp">
                <TextView
                    android:id="@+id/tv_city"
                    android:text="郑州"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_26"
                    android:layout_marginLeft="@dimen/height_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="6℃"
                    android:layout_toRightOf="@id/tv_city"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_18"
                    android:layout_marginLeft="@dimen/height_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@drawable/ic_arrow_enter"
                    android:layout_width="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/height_20"
                    android:layout_alignParentRight="true"
                    android:layout_height="30dp" />
            </RelativeLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                android:background="@null"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
                <include
                    android:id="@+id/include_navigation_toolbar"
                    layout="@layout/include_toolbar_navigation">
                </include>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh_navigation"
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="wrap_content">
    <com.footprint.travel.customview.MyNestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/navigation_recycler"
                android:layout_marginTop="@dimen/height_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </com.footprint.travel.customview.MyNestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</android.support.design.widget.CoordinatorLayout>
</layout>
