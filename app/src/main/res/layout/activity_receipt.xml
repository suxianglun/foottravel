<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/activity_title"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/red2"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:text="@string/zxwk_safe_pay"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/height_10"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/height_10"
            android:background="@color/white"
            cardCornerRadius="4dp"
            cardMaxElevation="1dp"
            cardElevation="1dp"
            android:layout_marginLeft="@dimen/height_20"
            android:layout_marginRight="@dimen/height_20"
            android:layout_height="300dp">
            <TextView
                android:layout_gravity="center_horizontal"
                android:textColor="@color/gray_66"
                android:text="@string/add_friend_pay"
                android:textSize="@dimen/text_16"
                android:layout_marginTop="@dimen/height_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:background="@color/gray_ce"
                android:layout_marginTop="@dimen/height_48"
                android:layout_height="1px">
            </View>
            <ImageView
                android:id="@+id/iv_pay_code"
                android:layout_gravity="center"
                android:layout_width="160dp"
                android:layout_height="160dp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>