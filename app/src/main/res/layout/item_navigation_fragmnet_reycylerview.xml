<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_main_fragment"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/height_10"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_scenery_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中原福塔"
            android:textSize="@dimen/text_16"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_scenery"
                android:layout_width="190dp"
                android:layout_height="110dp"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/bg_zyft" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_10"
                android:layout_marginLeft="@dimen/height_8"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/iv_scenery"
                android:text="河南省郑州市管城回族区航海东路与机场高速路交汇处" />
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_scenery"
                android:layout_marginBottom="@dimen/height_10"
                android:layout_marginLeft="@dimen/height_8"
                android:layout_toRightOf="@id/iv_scenery"
                android:text="起价：" />
            <TextView
                android:id="@+id/tv_price_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_scenery"
                android:layout_marginBottom="@dimen/height_10"
                android:layout_toRightOf="@id/tv_price"
                android:text="40元" />
            <TextView
                android:id="@+id/grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_scenery"
                android:layout_marginBottom="@dimen/height_10"
                android:layout_marginLeft="@dimen/height_10"
                android:layout_toRightOf="@id/tv_price_min"
                android:text="评级：" />
            <TextView
                android:id="@+id/tv_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_scenery"
                android:layout_marginBottom="@dimen/height_10"
                android:layout_toRightOf="@id/grade"
                android:text="AAAA"/>
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>