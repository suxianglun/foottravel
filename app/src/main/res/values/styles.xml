<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green_them</item>
        <item name="colorPrimaryDark">@color/green_them</item>
        <item name="colorAccent">@color/green_them</item>
        <item name="android:windowSoftInputMode">adjustUnspecified|stateHidden</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
    </style>
    <!--欢迎页主题-->
    <style name="AppSplash" parent="AppTheme">
    <item name="android:windowBackground">@mipmap/welcome</item>
    <item name="android:windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--注册页面TextInputLayout的style-->
    <style name="AppTheme.TextInputLayoutRegister" >
        <!-- Customize your theme here. -->
        <!--获取焦点或点击时TextInputLayout的字和线的颜色-->
        <item name="colorControlActivated">@color/yellow</item>
        <!--未获取焦点时TextInputLayout的字和线的颜色-->
        <item name="colorControlNormal">@color/white</item>
    </style>
    <style name="style_timer_large">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="style_timer_small">
        <item name="android:textSize">14sp</item>
    </style>
</resources>
